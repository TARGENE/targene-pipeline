manifest {
    name = 'UKBB-TMLE-Epistasis'
    author = 'Olivier Labayle'
    homePage = 'https://github.com/olivierlabayle/UKBBEpistasisPipeline.jl'
    description = 'Pipeline for the estimation of genetic interaction effects using the UK-biobank'
    mainScript = 'main.nf'
    nextflowVersion = '>=20.10.0'
    version = '0.2.0'
}

params {
    GRM_NSPLITS = 100
    MAF_THRESHOLD = 0.01
    NB_PCS = 6
    OUTDIR = "$launchDir/results"
}

process {
    memory = '8G'

    withLabel: bigmem {
      memory = '32G'
    }

    withLabel: multithreaded {
        cpus = 1
    }

}


profiles {
    eddie {
        includeConfig 'conf/eddie.config'
    }
    ci {
        includeConfig 'conf/ci.config'
    }
    local {
        includeConfig 'conf/local.config'
    }
}

